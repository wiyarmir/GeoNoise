    <!--&lt;!&ndash; A 'parent' preference, which enables/disables child preferences (below)-->
    <!--when checked/unchecked. &ndash;&gt;-->
    <ListPreference
        android:key="map_cubehelix"
        android:title="@string/pref_title_colorscheme"
        android:entries="@array/pref_colorscheme_titles"
        android:entryValues="@array/pref_colorscheme_values"
        android:defaultValue="0"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />
    <EditTextPreference
        android:key="map_convolution"
        android:title="@string/pref_radius_title"
        android:defaultValue="30"
        android:inputType="number" />
    <EditTextPreference
        android:key="map_transparent"
        android:title="@string/pref_opacity_title"
        android:defaultValue="0.5"
        android:inputType="numberDecimal" />
